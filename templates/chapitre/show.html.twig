{% extends 'layouts/base.html.twig' %}

{% block title chapitre.titre %}

{% block body %}
    <div class="row">
        <div class="col-md-12 mx-auto">
            <article class="bg-white rounded shadow pin">
                <div class="p-3">
                    <h1 class="h5 text-decoration-none text-secondary">{{ chapitre.titre }}</h1>
                    {% if chapitre.sections|length > 0 %}
                        {% for section in chapitre.sections %}
                            <a href="{{ path("app_section", {id : section.id}) }}">
                                <p class="pt-3 text-break">{{ section.titre }}</p>
                            </a>
                        {% endfor %}
                    {% else %}
                        <p class="pt-3 text-break">Aucune section n'est disponible pour ce chapitre</p>
                    {% endif %}

                    {% if chapitre.ressources|length > 0 %}
                        {% for ressource in chapitre.ressources %}
                            <a href="{{ path("app_ressource", {id : ressource.id}) }}">
                                <p class="pt-3 text-break">{{ ressource.titre }}</p>
                            </a>
                        {% endfor %}
                    {% else %}
                        <p class="pt-3 text-break">Aucune ressource n'est disponible pour ce chapitre</p>
                    {% endif %}

                </div>
            </article>
        </div>
    </div>
{% endblock %}